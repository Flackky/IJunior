using System;

namespace Third_part
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int randomMin = 0;
            int randomMax = 10;
            int dimensionSize = 6;
            int[] vector = new int[dimensionSize];
            int temporaryData;
            int shiftCount;

            Console.Write("Изначальный массив: ");

            for (int i = 0; i < vector.Length; i++)
            {
                vector[i] = random.Next(randomMin, randomMax);
                Console.Write($"{vector[i]} ");
            }

            Console.Write("\n\nНа сколько элементов нужно сдвинуть массив влево?\n-> ");
            shiftCount = Convert.ToInt32(Console.ReadLine());
            shiftCount %= dimensionSize;

            for (int i = 0; i < shiftCount; i++)
            {
                temporaryData = vector[0];

                for (int j = 0; j < vector.Length - 1; j++)
                {
                    vector[j] = vector[j + 1];
                }

                vector[vector.Length - 1] = temporaryData;
            }

            Console.Write($"\nМассив со сдвигом влево на {shiftCount} элементa(ов): ");

            for (int i = 0; i < vector.Length; i++)
            {
                Console.Write($"{vector[i]} ");
            }

            Console.ReadKey();              
        }
    }
}
